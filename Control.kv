#:kivy 1.9.1

<Control>:
    BoxLayout: # Settings menu 75/15
        #padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            id: btn_con
            text: "Connect"
            #size_hint_y: 0.15
            background_color: 1,0,0,1
            on_press: root.connect_to_robot()
        Button:
            text: root.your_time
            #size_hint_y: 0.15
            background_color: 1,0,0,1

    BoxLayout: # Control Up and gripper 75/30
        #padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            text: "GRIPPER"
            on_press: root.gripper_change()
            #size: 0.35,0.15
            size_hint_x: 0.33
            #pos_hint: {'center_x': 0}
            background_color: 1,1,0,1
        Button:
            text: "UP"
            on_press: root.up()
            #size: 0.35,0.15
            size_hint_x: 0.33
            #pos_hint: {'center_x': 0.5}
            background_color: 1,.5,0,1
        Button:
            id: btn_step1
            text: "1"
            size_hint_x: 0.0825
            #pos_hint: {'center_x': 1}
            background_color: 1,1,.5,1
            on_press: root.steps(1)
        Button:
            id: btn_step2
            text: "2"
            size_hint_x: 0.0825
            #pos_hint: {'center_x': 1}
            background_color: 1,1,.5,1
            on_press: root.steps(2)
        Button:
            id: btn_step5
            text: "5"
            size_hint_x: 0.0825
            #pos_hint: {'center_x': 1}
            background_color: 1,1,.5,1
            on_press: root.steps(5)
        Button:
            id: btn_step10
            text: "10"
            size_hint_x: 0.0825
            #pos_hint: {'center_x': 1}
            background_color: 1,1,.5,1
            on_press: root.steps(10)

    BoxLayout: # Control Down 75/30
        #padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            text: ""
            #size: 0.35,0.15
            pos_hint: {'center_x': 0}
        Button:
            text: "DOWN"
            pos_hint: {'center_x': 0.5}
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            on_press: root.down()
            background_color: 1,.5,0,1
        Button:
            text: ""
            #size: 0.35,0.15
            pos_hint: {'center_x': 1}

    BoxLayout: # Control Left / Base / Right 75/15
        #padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            text: "Rotate\nLEFT"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0}
            background_color: 1,.5,0,1
            on_press: root.left()
        Button:
            text: "BASE"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}
            background_color: 1,0,.5,1
        Button:
            text: "Rotate\nRIGHT"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 1}
            background_color: 1,.5,0,1
            on_press: root.right()

    BoxLayout: # Control Forward 75/30
        #padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            text: ""
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0}
        Button:
            text: "FORWARD"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}
            background_color: 1,.5,0,1
            on_press: root.forwards()
        Button:
            text: ""
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 1}

    BoxLayout: # Control backward 75/30
        #padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            text: ""
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0}
        Button:
            text: "BACKWARD"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}
            background_color: 1,.5,0,1
            on_press: root.backwards()
        Button:
            text: ""
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 1}

    #BoxLayout:
        #orientation: "vertical"
        #size_hint: 1,0.15
        #ControledItems:
        #ControledValues:


#<ControledItems@BoxLayout>:
    #orientation: "horizontal"
    BoxLayout: # Values 1/15
        size_hint: 1,0.075
        Label:
            text: "Rotate"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Arm\nUnder"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Arm\nAbove"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Gripper"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Vertical"
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Horizontal"
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "rotation"
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .7
                Rectangle:
                    pos: self.pos
                    size: self.size

#<ControledValues@BoxLayout>:
    #rotate_value: ""
    #arm_under_value: ""
    #arm_above_value: ""
    #gripper_value: ""
    #orientation: "horizontal"
    BoxLayout: # Values 1/15
        size_hint: 1,0.075
        Label:
            text: root.str_rotate
        Label:
            text: root.str_arm_under
        Label:
            text: root.str_arm_above
        Label:
            text: root.str_gripper
        Label:
            text: root.str_posy
        Label:
            text: root.str_posx
        Label:
            text: root.str_posr