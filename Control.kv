#:kivy 1.9.1

<Control>:
    BoxLayout: # Settings menu 75/15
        padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            text: "Settings"
            #size_hint_y: 0.15
        Button:
            text: root.your_time
            #size_hint_y: 0.15

    BoxLayout: # Control Up 75/30
        padding: 10,10,10,10
        size_hint: 1,0.30
        orientation: "vertical"
        Button:
            text: "UP"
            size_hint_x: 0.25
            size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}
            on_press: root.up()
        Button:
            text: "DOWN"
            size_hint_x: 0.25
            size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}
            on_press: root.down()

    BoxLayout: # Control Left / Base / Right 75/15
        padding: 10,10,10,10
        size_hint: 1,0.15
        orientation: "horizontal"
        Button:
            text: "LEFT"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0}
        Button:
            text: "BASE"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}
        Button:
            text: "RIGHT"
            #size_hint_x: 0.25
            #size_hint_y: 0.15
            pos_hint: {'center_x': 1}

    BoxLayout: # Control Forward 75/30
        padding: 10,10,10,10
        size_hint: 1,0.30
        orientation: "vertical"
        Button:
            text: "FORWARD"
            size_hint_x: 0.25
            size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}
        Button:
            text: "BACKWARD"
            size_hint_x: 0.25
            size_hint_y: 0.15
            pos_hint: {'center_x': 0.5}

    #BoxLayout:
        #orientation: "vertical"
        #size_hint: 1,0.15
        #ControledItems:
        #ControledValues:


#<ControledItems@BoxLayout>:
    #orientation: "horizontal"
    BoxLayout: # Values 1/15
        size_hint: 1,0.075
        Label:
            text: "Rotate"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Arm Under"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Arm Above"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Gripper"
            canvas.before:
                Color:
                    rgba: 0, .5, .5, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Vertical"
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Horizontal"
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .7
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "rotation"
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .7
                Rectangle:
                    pos: self.pos
                    size: self.size

#<ControledValues@BoxLayout>:
    #rotate_value: ""
    #arm_under_value: ""
    #arm_above_value: ""
    #gripper_value: ""
    #orientation: "horizontal"
    BoxLayout: # Values 1/15
        size_hint: 1,0.075
        Label:
            text: root.str_rotate
        Label:
            text: root.str_arm_under
        Label:
            text: root.str_arm_above
        Label:
            text: root.str_gripper
        Label:
            text: root.str_posy
        Label:
            text: root.str_posx
        Label:
            text: root.str_posr